<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingLeft="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    >

    <TextView
        android:id="@+id/home_recyclerview_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="8dp"
        android:textColor="@color/TextColor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingRight="16dp"
        android:text="1."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_item_iv"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:layout_constraintStart_toEndOf="@+id/home_recyclerview_position"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_recyclerview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:textSize="14sp"
        android:textColor="@color/TextColor"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/home_item_iv"
        app:layout_constraintTop_toTopOf="@+id/home_item_iv" />

    <TextView
        android:id="@+id/home_recyclerview_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/theme_grey"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/home_item_iv"
        app:layout_constraintTop_toBottomOf="@+id/home_recyclerview_name" />

    <TextView
        android:id="@+id/home_recyclerview_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/theme_grey"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/home_item_iv"
        app:layout_constraintTop_toBottomOf="@+id/home_recyclerview_name" />

    <com.mikepenz.iconics.view.IconicsTextView
        android:id="@+id/home_recyclerview_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:text="{ion-ios-download-outline}"
        android:textColor="@color/theme_blue"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
